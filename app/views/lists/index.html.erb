<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1595769816263-9b910be24d5f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=879&q=80);">
  <div class="container">
    <h1 class="title">Cineworld</h1>
    <p>Do your custom WatchLists!</p>
    <%= link_to "Apply Now", new_list_path, class:"btn btn-flat" %>
  </div>
</div>
<hr>
<div class="container mt-4">
  <div><h1>Your Lists</h1></div>
  <div class="row">
    <% a = 0 %>
    <% @lists.each do |list| %>
      <div class="card-trip col-2">
        <h1><%= a += 1 %></h1>
        <div class="card-trip-infos">
          <div class="text-center">
            <h2><%= link_to list.name, list_path(list) %></h2>
            <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
              <i class="fa-solid fa-trash" style="color: red"></i>
            <% end %>
            <p>Watch Now!</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>

<div class="container">
  <%= link_to "Criar Nova Lista", new_list_path, class:"button" %>
</div>

<hr>
<br>
